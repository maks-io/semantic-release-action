{
  "name": "semantic-release-action",
  "version": "1.0.0",
  "description": "A GitHub Action to publish npm packages and create GitHub releases automatically.",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npx -l -y force-package-manager -p npm -o mute -c",
    "build": "ncc build src/index.ts -o dist",
    "lint": "eslint .",
    "test": "jest --config jest.config.ts",
    "test-watch": "jest --config jest.config.ts --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maks-io/semantic-release-action.git"
  },
  "keywords": [
    "github-action",
    "npm",
    "release",
    "automation"
  ],
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@types/node": "^22.10.2",
    "env-var-manager": "^3.0.4",
    "semver": "^7.6.3",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/semver": "^7.5.8",
    "@vercel/ncc": "^0.38.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
